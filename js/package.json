{
  "name": "live-view-model",
  "version": "0.3.1",
  "type": "module",
  "description": "Core functionality for live-view-model",
  "main": "./lib/index.js",
  "types": "./lib/typescript/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/typescript/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "version": "npm version patch",
    "prepare": "yarn build && cp ../README.md . && cp ../LICENSE .",
    "release": "npm publish",
    "build": "tsc --project tsconfig.json",
    "watch": "tsc --watch",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "clean": "del-cli lib",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "patch-package"
  },
  "keywords": [
    "live-view-model",
    "phoenix"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guess/live-view-model.git"
  },
  "author": "Steve Strates <steve@strates.io> (https://github.com/guess)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guess/live-view-model/issues"
  },
  "homepage": "https://github.com/guess/live-view-model#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@guess/phoenix-js": "git+https://github.com/guess/phoenix-js.git",
    "json-joy": "9.9.1",
    "lodash-es": "^4.17.21",
    "mobx": "^6.13.1",
    "patch-package": "^8.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-eslint": "^10.1.0",
    "del-cli": "^5.1.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.4.0"
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
